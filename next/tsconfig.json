{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/app/components/*": ["./app/components/*"],
      "@/lib/*": ["./lib/*", "./app/lib/*"],
      "@/hooks/*": ["./hooks/*", "./app/hooks/*"],
      "@/styles/*": ["./styles/*", "./app/styles/*"],
      "@/types/*": ["./types/*", "./app/types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js",
    "next.config.js",
    "app/components/WaveAnimation.jsx",
    "../BeachCard.tsx",
    "../@/app/components/alerts/AlertsList.tsx"
  ],
  "exclude": ["node_modules"]
}
